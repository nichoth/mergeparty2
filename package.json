{
  "name": "@substrate-system/mergeparty",
  "version": "0.0.8",
  "description": "Automerge + Partykit",
  "type": "module",
  "exports": {
    "./client": {
      "import": "./dist/client/partykit-websocket-adapter.js",
      "require": "./dist/client/partykit-websocket-adapter.cjs"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./server/relay": {
      "import": "./dist/server/relay.js",
      "require": "./dist/server/relay.cjs"
    },
    "./server/storage": {
      "import": "./dist/server/with-storage.js",
      "require": "./dist/server/with-storage.js"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "example": "example",
    "test": "test"
  },
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js,mjs}\"",
    "test": "npm run test:storage && npm run test:storage:persistence && npm run test:relay && npm run test:build",
    "test:ci": "npm run test:storage && npm run test:build",
    "test:build": "npm run build && node ./test/test.build.mjs",
    "test:storage": "npm run build-for-test && esbuild ./test/storage-simple.test.ts --bundle --format=esm | tapout",
    "test:storage:persistence": "npm run build-for-test && npm run test:storage:persistence:run",
    "test:storage:persistence:run": "node ./test/storage-persistence-clean.mjs",
    "test:integration": "npm run build-for-test && npm run test:integration:run",
    "test:integration:run": "concurrently --kill-others --success first \"npm run start:storage:test\" \"npm run test:integration:wait\"",
    "test:integration:wait": "wait-on --timeout 30000 http://localhost:1999/parties/main/health && node ./test/integration-runner.mjs",
    "test:relay": "npm run build-for-test && npm run test:relay:run",
    "test:relay:run": "node ./test/relay-simple.mjs",
    "test:relay:wait": "wait-on --timeout 30000 http://localhost:1999/parties/main/health && node ./test/relay-simple.mjs",
    "build-for-test": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm",
    "build-cjs": "esbuild src/*.ts src/**/*.ts src/**/*.js --format=cjs --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.cjs --sourcemap --loader:.wasm=binary",
    "build-cjs:min": "esbuild src/*.ts src/**/*.ts src/**/*.js --format=cjs --minify --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.min.cjs --sourcemap --loader:.wasm=binary",
    "build-esm": "esbuild src/*.ts src/**/*.ts src/**/*.js --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap --loader:.wasm=binary && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build-esm:min": "esbuild src/*.ts src/**/*.ts src/**/*.js --format=esm --keep-names --bundle --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist --sourcemap --loader:.wasm=binary",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && VITE_DEBUG_MODE=staging vite --mode staging --base=\"/mergeparty\" build",
    "build-docs": "typedoc ./src/**/*.ts",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build-esm:min && npm run build-cjs:min",
    "start": "concurrently --kill-others \"npx partykit dev --config example_backend/partykit.json\" \"npx vite\"",
    "start:storage": "concurrently --kill-others \"DEBUG=\"mergeparty:*\" npx partykit dev --config example_backend/partykit-storage.json\" \"npx vite\"",
    "start:relay": "concurrently --kill-others \"npx partykit dev --config example_backend/partykit-relay.json\" \"npx vite\"",
    "start:unified": "concurrently --kill-others \"DEBUG=\"mergeparty:*\" npx partykit dev --config example_backend/partykit.json\" \"npx vite\"",
    "start:storage:test": "DEBUG='' npx partykit dev --config example_backend/partykit-storage.json --port 1999",
    "start:relay:test": "DEBUG='' npx partykit dev --config example_backend/partykit-relay.json --port 1999",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@automerge/automerge": "^3.1.1",
    "@automerge/automerge-repo": "^2.2.0",
    "@automerge/automerge-repo-network-websocket": "^2.2.0",
    "@automerge/automerge-repo-sync-server": "^0.2.8",
    "@substrate-system/automerge-repo-network-websocket": "^2.3.3",
    "@substrate-system/automerge-repo-slim": "^2.3.2",
    "automerge-repo-storage-memory": "^0.0.48",
    "eventemitter3": "^5.0.1",
    "partykit": "^0.0.115",
    "partysocket": "1.1.5"
  },
  "devDependencies": {
    "@automerge/automerge-repo-storage-indexeddb": "^2.2.0",
    "@cloudflare/workers-types": "^4.20250813.0",
    "@preact/preset-vite": "^2.10.2",
    "@preact/signals": "^2.3.1",
    "@substrate-system/a11y": "^0.0.13",
    "@substrate-system/css-normalize": "^0.0.13",
    "@substrate-system/debug": "^0.9.22",
    "@substrate-system/dom": "^0.1.7",
    "@substrate-system/tapout": "^0.0.4",
    "@substrate-system/tapzero": "^0.10.15",
    "@substrate-system/text-input": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "htm": "^3.1.1",
    "lightningcss": "^1.30.1",
    "markdown-toc": "^1.2.0",
    "postcss-nesting": "^13.0.2",
    "preact": "^10.27.1",
    "tap-spec": "^5.0.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-wasm": "^3.5.0",
    "wait-on": "^8.0.4"
  },
  "keywords": [
    "automerge",
    "crdt",
    "websocket",
    "partykit"
  ],
  "homepage": "https://github.com/substrate-system/mergeparty",
  "bugs": {
    "url": "https://github.com/substrate-system/mergeparty/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/mergeparty.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)"
}
